{
  "name": "football-ticketing",
  "version": "1.0.0",
  "description": "Multi-tenant football ticketing platform with NFC cards",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:regression": "npm run test --workspace=apps/fan-api --workspace=apps/club-backoffice-api --workspace=apps/pos-api --workspace=apps/entry-api --workspace=apps/super-admin-api",
    "clean": "docker-compose down -v",
    "prepare": "husky"
  },
  "keywords": [
    "football",
    "ticketing",
    "nfc",
    "multi-tenant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
